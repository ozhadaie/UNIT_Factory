NAME=	visualizer
SRCS=	main.c colorize.c
INCS=	visualizer.h
CMPL=	cc
OBJD=	obj
SRCD=	src
CFLG=	$(addprefix -W, all extra error)
INCL=	$(addprefix -I../, bonus/inc libftprintf/inc libftprintf/libft/inc)

OBJS=	$(addprefix $(OBJD)/, $(SRCS:%.c=%.o))

all: $(NAME)

$(NAME): $(OBJS)
	@$(CMPL) -o $(NAME) $^ -L../libftprintf -lftprintf -lncurses $(INCL)
	@echo "–í–æ—Ç —ç—Ç–æ –ø–æ–¥–≥–æ–Ω: $@ ‚úÖ"

$(OBJD)/%.o: $(SRCD)/%.c
	@mkdir -p $(OBJD)
	@$(CMPL) $(CFLG) $(INCL) -o $@ -c $<
	@echo "–§–∞–π–ª—ã –Ω–∞ –ø—Ä–æ–∫–∞—á–∫—É: $(<:$(SD)/%=%) üöÄ"

clean:
	@rm -rf $(OBJD)
	@echo "–§–£. –ù–∞ –≤—ã–∫–∏–Ω—à—Ç–µ–π–Ω üöÆ"

fclean: clean
	@rm -f $(NAME)
	@echo "–ò–≥—Ä–∞—Ç—å –Ω–∞–¥–æ–µ–ª–æ.. ü§∑‚Äç‚ôÇÔ∏è"

re: fclean all

.PHONY: all clean fclean re
