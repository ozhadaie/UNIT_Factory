docker run --name Abathur -v /Users/ozhadaie/:/root -p 3000:3000 -it python:2-slim
docker exec Abathur pip install Flask
echo -e "from flask import Flask\napp = Flask(__name__)\n@app.route(\"/\")\ndef main():\n\treturn \"<h1>Hello, World</h1\"" > /Users/ozhadaie/app.py
docker exec -e FLASK_APP=/root/app.py Abathur flask run --host=0.0.0.0 --port 3000
